{
    "suggest.noselect": false,
    "coc.preferences.formatOnSaveFiletypes": [
        "cpp",
        "css",
        "graphql",
        "html",
        "javascript",
        "javascriptreact",
        "json",
        "json",
        "python",
        "rust",
        "rust",
        "scss",
        "typescript",
        "typescriptreact"
    ],
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.enableNerdfont": true,
    "prettier.tabWidth": 4,
    "prettier.printWidth": 100,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", ".cache/", "compile_commands.json", ".vim/", ".git/"],
            "initializationOptions": {
                "cache": {
                    "directory": ".cache/"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        }
    }
}
