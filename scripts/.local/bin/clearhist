#!/bin/sh

#
# clears chromium history for past hour
# requires xdotool
#

chromium &
sleep 2
xdotool key Control+l 
xdotool type --delay 0 "chrome://settings/clearBrowserData"
xdotool key Enter

sleep 5

for i in {1..4}; do
    xdotool key Shift+Tab
done

xdotool key Enter
sleep 1
xdotool key Control+w
