#!/bin/bash

for item in *; do
    [ "${item: -4}" == ".rar" ] && unrar x "$item" && rm "$item"
    [ "${item: -4}" == ".zip" ] && unzip "$item" && rm "$item"

    dir="${item%.*}"
    if [ -d "$dir" ]; then 
        pushd "$dir"
        echo "Generating $(ls -l | wc -l) pages: $dir.pdf"
        rm *.url
        img2pdf * -o "../$dir.pdf" 2> /dev/null || echo "Couldn't generate $dir.pdf"
        $0
        popd
    fi
done
