#!/bin/bash

#
# converts npm commands to yarn for stuff that uses npm
#

# change install to add
first_arg=$([ $1 == "install" ] && echo add || echo $1)
rest_arg=""

for arg in ${@:2}; do
    # check for global flag
    if [ $arg == "-g" ] || [ $arg == "--global" ]; then 
        first_arg="global $first_arg" 
    else
        rest_arg="$rest_arg $arg"
    fi
done

yarn $first_arg $rest_arg
